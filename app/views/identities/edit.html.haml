%h1 Editing identity

- form_for(@identity) do |f|
  = f.error_messages
  %fieldset
    %legend Edit identity
    %ol
      %li
        %label{:for=>"name"} Name:
        = f.text_field :name
      %li
        %label{:for=>"openid_url"} Real openid:
        = f.text_field :openid_url
    = submit_tag "Update"

= link_to 'Back', :controller => :users, :action => :show, :id => current_user.id